{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="container mx-4 px-4 py-4">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Mon Compte</h2>

    <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold text-gray-700 mb-4">Informations personnelles</h3>
        
        <div class="space-y-4">
            <div>
                <strong class="text-sm font-medium text-gray-600">Nom :</strong>
                <p class="text-gray-800">{{ utilisateur.nom }}</p>
            </div>
            <div>
                <strong class="text-sm font-medium text-gray-600">Prénom :</strong>
                <p class="text-gray-800">{{ utilisateur.prenom }}</p>
            </div>
            <div>
                <strong class="text-sm font-medium text-gray-600">Email :</strong>
                <p class="text-gray-800">{{ utilisateur.email }}</p>
            </div>
            <div>
                <strong class="text-sm font-medium text-gray-600">Adresse :</strong>
                <p class="text-gray-800">{{ utilisateur.adresse }}</p>
            </div>
            <div>
                <strong class="text-sm font-medium text-gray-600">Numéro de téléphone :</strong>
                <p class="text-gray-800">{{ utilisateur.numeroDeTelephone }}</p>
            </div>
        </div>
    </div>

    <div class="mt-6 text-center">
        <a href="{{ path('app_logout') }}" class="bg-red-600 text-white space-x-4 py-2 px-4 rounded hover:bg-red-700">
            Se déconnecter
        </a>
    </div>
</div>
{% endblock %}
