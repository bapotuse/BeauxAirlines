{% extends 'base.html.twig' %}

{% block title %}Aéroports | BeauxAirlines{% endblock %}

{% block body %}
<main class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold">Gestion des Aéroports</h1>
        <a href="{{ path('app_aeroport_add') }}" 
            class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Ajouter un aéroport
        </a>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6 mb-8">
        <form class="space-y-4">
            <div class="grid grid-cols-1 gap-4">
                <div>
                    <label for="recherche" class="block text-sm font-medium text-gray-700">Rechercher</label>
                    <input type="text" id="recherche" name="recherche" placeholder="Entrez le nom, la ville ou le pays"
                        class="mt-1 block px-2 py-2 w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                </div>
            </div>
            <div class="flex justify-end">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Rechercher
            </div>
        </form>
    </div>


    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Id</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ville</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pays</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for aeroport in aeroports %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">{{ aeroport.id }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ aeroport.nom }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ aeroport.ville }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ aeroport.pays }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <a href="{{ path('app_aeroport_edit', {'id': aeroport.id}) }}" class="text-blue-600 hover:text-blue-900 mr-3">Modifier</a>
                                <a href="{{ path('app_aeroport_delete', {'id': aeroport.id}) }}" class="text-red-600 hover:text-red-900">Supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4 text-gray-500">Aucun aéroport trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</main>
{% endblock %} 