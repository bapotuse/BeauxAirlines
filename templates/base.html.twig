<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Gestion Aéroport{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
</head>
<header class="bg-blue-800 text-white shadow">
    {% if afficherNavbar is not defined or afficherNavbar %}
        <div class="relative container mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <a href="{{ path('app_home') }}" class="text-2xl font-bold">Beaux Airlines</a>

                <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg hover:bg-blue-700 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>

                <nav class="hidden md:flex space-x-4">
                    <a href="{{ path('app_aeroport') }}" class="hover:underline">Aéroports</a>
                    <a href="{{ path('app_pilote') }}" class="hover:underline">Pilotes</a>
                    <a href="{{ path('app_hangar') }}" class="hover:underline">Hangars</a>
                    <a href="{{ path('app_avion') }}" class="hover:underline">Avions</a>
                    <a href="{{ path('app_vol') }}" class="hover:underline">Vols</a>
                </nav>

                <div class="hidden md:flex space-x-4">
                    <a href="{{ path('app_compte') }}" class="bg-blue-600 font-bold text-white px-4 py-2 rounded hover:bg-blue-700">Mon Compte</a>
                    <a href="{{ path('app_logout') }}" class="bg-red-600 font-bold text-white px-4 py-2 rounded hover:bg-red-700">Déconnexion</a>
                </div>
            </div>

            <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
                <nav class="flex flex-col space-y-4">
                    <a href="{{ path('app_aeroport') }}" class="hover:underline">Aéroports</a>
                    <a href="{{ path('app_pilote') }}" class="hover:underline">Pilotes</a>
                    <a href="{{ path('app_hangar') }}" class="hover:underline">Hangars</a>
                    <a href="{{ path('app_avion') }}" class="hover:underline">Avions</a>
                    <a href="{{ path('app_vol') }}" class="hover:underline">Vols</a>
                    <div class="flex flex-col space-y-2 pt-2 border-t border-blue-700">
                        <a href="{{ path('app_compte') }}" class="bg-blue-600 font-bold text-white px-4 py-2 rounded hover:bg-blue-700 text-center">Mon Compte</a>
                        <a href="{{ path('app_logout') }}" class="bg-red-600 font-bold text-white px-4 py-2 rounded hover:bg-red-700 text-center">Déconnexion</a>
                    </div>
                </nav>
            </div>
        </div>
    {% endif %}
</header>

<body class="bg-gray-100 text-gray-900">
    <main class="container mx-auto px-4 py-4">

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message mb-4 p-4 rounded shadow 
                    {{ label == 'success' ? 'bg-green-100 text-green-800 border border-green-300' : 'bg-red-100 text-red-800 border border-red-300' }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
        
    </main>

    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('navigation') }}
</body>

</html>
