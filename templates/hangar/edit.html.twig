{% extends 'base.html.twig' %}

{% block title %}Modifier Hangar | BeauxAirlines{% endblock %}

{% block body %}
<main class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-6">Modifier le hangar</h1>

        <form method="post" action="{{ path('app_hangar_edit', {'id': hangar.id}) }}" class="space-y-6 bg-white shadow-lg rounded-lg p-6">            <div class="rounded-md">
                <label for="nom" class="block text-sm font-medium text-gray-700">Nom</label>
                <input type="text" id="nom" name="nom" value="{{ hangar.nom }}" required
                       class="mt-1 block px-2 py-2 w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>

            <div class="rounded-md">
                <label for="capacite" class="block text-sm font-medium text-gray-700">Capacite</label>
                <input type="text" id="capacite" name="capacite" value="{{ hangar.capacite }}" required
                       class="mt-1 block px-2 py-2 w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>

            <div class="flex justify-end space-x-4">
                <a href="{{ path('app_hangar') }}"
                   class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                    Annuler
                </a>
                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded">
                    Enregistrer
                </button>
            </div>
        </form>
    </div>
</main>
{% endblock %}
